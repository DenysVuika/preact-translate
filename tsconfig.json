{
  "compilerOptions": {
    "importHelpers": true,
    "declaration": true,
    "declarationDir": "./dist",
    "module": "ESNext",
    "outDir": "./dist",
    "target": "ES2022",
    "skipLibCheck": true,
    "esModuleInterop": true,

    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules"]
}
